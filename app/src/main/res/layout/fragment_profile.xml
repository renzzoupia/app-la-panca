<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragment.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/bgapp"
        android:layout_width="526dp"
        android:layout_height="900dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/profile_orange_background"
        android:translationY="-650dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.923"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/profilePage_photo"
        android:layout_width="135dp"
        android:layout_height="130dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile_pp" />

    <TextView
        android:id="@+id/txtNombreCompleto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="147dp"
        android:layout_marginTop="-20dp"
        android:layout_marginEnd="146dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="Renzo Renato Upiachihua Panduro"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="135dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="135dp"
        android:gravity="center"
        android:textColor="#070101"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilePage_photo" />


    <Button
        android:id="@+id/profile_info"
        android:layout_width="394dp"
        android:layout_height="83dp"
        android:layout_marginTop="56dp"
        android:background="@android:color/transparent"
        android:drawableStart="@drawable/profile_personal"
        android:drawablePadding="3dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="renzoupiachihua3@gmail.com"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNombreCompleto" />

    <Button
        android:id="@+id/order_history_btn"
        android:layout_width="394dp"
        android:layout_height="83dp"
        android:layout_marginTop="28dp"
        android:background="@android:color/transparent"
        android:drawableStart="@drawable/location_xml"
        android:drawablePadding="3dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Psj. Iquitos 375"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_info" />



    <Button
        android:id="@+id/editarClienteBtn"

        android:layout_width="258dp"
        android:layout_height="54dp"
        android:backgroundTint="@color/orange_light"
        android:text="Editar perfil"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_history_btn"
        app:layout_constraintVertical_bias="0.373" />

    <Button
        android:id="@+id/eliminarClienteBtn"

        android:layout_width="258dp"
        android:layout_height="54dp"
        android:backgroundTint="@color/red"
        android:text="Eliminar cuenta"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order_history_btn"
        app:layout_constraintVertical_bias="0.71" />


</androidx.constraintlayout.widget.ConstraintLayout>